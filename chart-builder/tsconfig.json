{
  "compilerOptions": {
    "outDir": "lib",
    "module": "commonjs",
    "target": "esnext",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017"
    ],
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "declaration": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src",
    "index.d.ts",
    "types.ts"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
